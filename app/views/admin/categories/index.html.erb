<h1>Manage Categories</h1>

<p><%= link_to 'Create Category', new_admin_category_path %></p>

<ul>
  <% @categories.each do |category| %>
    <li><%= category.title %> | <%= link_to "Delete", admin_category_path(category), method: :delete, data: { confirm: "Are you sure?" }%></li>
  <% end %>
</ul>
