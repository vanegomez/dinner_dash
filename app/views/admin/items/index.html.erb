<div class="row text-center">
  <% @items.each do |item| %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <%= image_tag item.image.url %>
          <div class="caption">
            <h3><%= link_to item.title, admin_item_path(item) %></h3>

            <p><%= item.description %></p>

            <p>
              <%= to_dollars(item.price) %>
              <%= button_to "Edit Item", edit_admin_item_path(item), method: :get, class: "btn btn-success" %><br>
              <%= button_to "Delete Item", admin_item_path(item), method: :delete, class: "btn btn-success" %>
            </p>
          </div>
        </div>`
      </div>
  <% end %>

</div>
