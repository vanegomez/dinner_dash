<div id="create-new-item">

  <%= form_for(@item, html: {multipart: true}) do |f| %>
    <ul class="errors">
      <% f.object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>

    <%#= f.label :title %>
    <%= f.text_field :title, :placeholder => "Title" %><br>
    <br>

    <%#= f.label :description %>
    <%= f.text_area :description, :placeholder => "Description" %><br>
    <br>

    <%#= f.label :price %>
    <%= f.text_field :price, :placeholder => "Price" %><br>
    <br>

    <div class="field">
      <%= f.label :image, "Attach an Image" %>
      <%= f.file_field :image %> <br>

      <%= f.label :status, 'Is Available?' %>
      <%= f.check_box :status %><br>

      <%= f.label :category_ids, 'Categories' %><br/>
      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :title) %><hr/>
    </div>

    <div class="field-button">
      <%= f.submit %>
    </div>

  <% end %>
</div>
