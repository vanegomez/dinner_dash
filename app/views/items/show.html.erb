<h1><%= @item.title %></h1>

<p>
  <%= image_tag @item.image.url %>
</p>

<p>
  <%= @item.description %>
</p>

<p>
  <%= to_dollars(@item.price) %>
</p>

<% if current_user && admin_user %>
  <p>
    <%= button_to 'Edit Item', edit_admin_item_path(@item), class:"btn btn-success" %>
    <%= button_to 'Delete Item', admin_item_path, method: :delete, class:"btn btn-success" %><br>
  </p>
<% end %>

<h4><%= link_to "< Back to All Items", items_path %></h4>
