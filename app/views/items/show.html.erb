<h1><%= @item.title %></h1>

<p>
  <%= image_tag @item.image.url %>
</p>

<p>
  <%= @item.description %>
</p>

<p>
  <%= to_dollars(@item.price) %>
</p>
<% if current_user && admin_user %>
<p>
  <%= link_to 'Delete Item', item_path(@item), method: :delete %><br>
  <%= link_to 'Edit Item', edit_admin_item_path(@item) %>
</p>
    <% end %>

<h4><%= link_to "< Back to All Items", items_path %></h4>
