<%= form_for(@item, html: {multipart: true}) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.label :price %>
  <%= f.text_field :price %><br>

  <%= f.label :image, "Attach an Image" %> <br>
  <%= f.file_field :image %> <br>

  <%= f.submit "Create New Item" %>
<% end %>
